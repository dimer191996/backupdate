<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Create Article</title>
  </head>
  <body>
    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="w-1/2 p-3">
          <h1 class="mb-4">New Article</h1>
          <button id="upload_widget" class="btn w-100 btn-outline-primary">
            Upload files
          </button>
          <form method="POST" action="/articles" class="mb-5">
            <%- include('_form_fields') %>
          </form>
        </div>
      </div>
    </div>
  </body>
  <script
    src="https://upload-widget.cloudinary.com/global/all.js"
    type="text/javascript"
  ></script>
  <script type="text/javascript">
    var inputF = document.getElementById("imagesUrl");

    var myWidget = cloudinary.createUploadWidget(
      {
        cloudName: "dggjlyw5e",
        uploadPreset: "c315aizt",
      },
      (error, result) => {
        if (!error && result && result.event === "success") {
          inputF.value = result.info.secure_url;
          console.log("Done! Here is the image info: ", result.info);
        }
      }
    );

    document.getElementById("upload_widget").addEventListener(
      "click",
      function () {
        myWidget.open();
      },
      false
    );
  </script>
</html>
