<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Blg Admin</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Blog articles</h1>
      <a href="articles/new" class="btn btn-success mb-4"> New Article </a>
      <% articles.forEach(article => { %>
      <div class="card">
        <div class="card-header">
          <%= article.createdAt.toLocaleDateString() %>
        </div>
        <div class="card-body">
          â€‹<picture>
            <source srcset="<%= article.image %>" type="image/svg+xml" />
            <img
              src="<%= article.image %>"
              height="200"
              width="200"
              class="img-fluid img-thumbnail"
              alt="..."
            />
          </picture>
          <blockquote class="blockquote mb-0">
            <p><%= article.articlePreviewTitle %></p>

            <p>Views : <%= article.views %></p>
            <p>Views : <%= article.tags %></p>
            <footer class="blockquote-footer">
              <span class="badge btn-primary"><%= article.category %> </span>
            </footer>
            <p><%- article.articlePreviewMarkdown %></p>
          </blockquote>
        </div>
        <div class="col-sm-6">
          <div class="card-body">
            <a href="/articles/<%= article.slug %> " class="btn btn-primary"
              >Read more</a
            >
            <a href="#" class="btn btn-secondary">Edit</a>
            <form
              action="/articles/<%= article.id %>?_method=DELETE"
              class="d-inline"
              method="POST"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
